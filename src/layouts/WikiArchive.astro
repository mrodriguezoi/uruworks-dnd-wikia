---
import CustomHead from '../components/CustomHead.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<CustomHead title={title}>
    <Header title={title}> </Header>
    <div class="article-container lg:flex gap-8 min-h-[60vh]">
        <div class="lg:w-[33%] p-4 lg:order-2 flex flex-col items-center gap-4 sidebar-content">
            <slot name="sidebar-content" />
        </div>
        <div class="lg:w-[66%] flex flex-col justify-between">
            <slot name="main-content" />
        </div>
    </div>
</CustomHead>