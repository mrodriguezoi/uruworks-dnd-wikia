---
import { type MainContent } from "../schema/articleSchemas";

interface Props {
    contentArray: Array<MainContent>;
    slot?: string;
    title: string;
}

const { contentArray , slot } = Astro.props;
---
<div slot={slot}>

{contentArray.map((content) => (
    <div class="ml-0 lg:ml-4 m-4">
        {content.title ? <h2 class="h2">{content.title}</h2> : null}
        <p>{content.text}</p>
    </div>
))}
</div>
